        <Label Content="Dato:" HorizontalAlignment="Center" Margin="6,22.667,91.333,0" VerticalAlignment="Top" Grid.Row="1"  Height="26" Width="60" Grid.Column="2" FontWeight="Bold" FontSize="14"/>

        <TextBlock Name="n" Margin="10,21.667,0,0" HorizontalAlignment="Left" TextWrapping="Wrap"  VerticalAlignment="Top" Grid.Row="1" Grid.Column="1" Width="200" Height="27" FontSize="14"/>
