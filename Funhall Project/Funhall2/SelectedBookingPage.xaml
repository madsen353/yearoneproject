                    <StackPanel>
                        <TextBlock Text="{Binding Path=TimeDesc}" />
                        <TextBlock Text="{Binding Path=StartTime}" />
                        <TextBlock Text="{Binding Path=EndTime}" />
                    </StackPanel>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>-->

        <ListView  Name="Activities" RenderTransformOrigin="0.506,4.68" Margin="0,33,0,10" Grid.Row="2" Grid.ColumnSpan="4"    >
            <ListView.View>
                <GridView >
                    <GridViewColumn Header="TimeDescription" Width="120" DisplayMemberBinding="{Binding TimeDesc}"  />
                    <GridViewColumn Header="Start Time" Width="200" DisplayMemberBinding="{Binding StartTime}" />
                    <GridViewColumn Header="End Time" Width="150" DisplayMemberBinding="{Binding EndTime}" />
                </GridView>
            </ListView.View>
        </ListView>

    </Grid>
